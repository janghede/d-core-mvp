{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": [
      "vite/client"
    ],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@backend/*": [
        "./backend/*"
      ],
      "@frontend/*": [
        "./frontend/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    }
  }
}